# IBM i / Mapepire
IBMI_HOST=
IBMI_PORT=8076
IBMI_USER=
IBMI_PASSWORD=

REPORT_BASE_DIR=
IBMI_IGNORE_UNAUTHORIZED=true
# LLM (OpenRouter - Access 200+ models)
OPENROUTER_API_KEY=
OPENROUTER_MODEL_ID=google/gemini-3-flash-preview

# Alternative models (change model ID to use any):
# Google: google/gemini-2.0-flash-001, google/gemini-2.5-pro-preview-03-25
# OpenAI: openai/gpt-4o, openai/gpt-4o-mini, openai/gpt-5-mini
# Anthropic: anthropic/claude-sonnet-4, anthropic/claude-haiku
# DeepSeek: deepseek/deepseek-chat-v3-0324
# Meta: meta-llama/llama-4-maverick
# See all models: https://openrouter.ai/models
# Hybrid router tuning
#ROUTER_CONFIDENCE_THRESHOLD=0.65
#ROUTER_AUDIT_LOG=router_audit.jsonl

# Optional
#ENABLE_DB_AUDIT_LOG=0
#ENABLE_ACTION_TOOLS=0

# =============================================================================
# IBM i 7.6 NEW FEATURES
# =============================================================================

# User Schema Access (Business Data Queries)
# Comma-separated list of user schemas to allow read-only access
# Example: ALLOWED_USER_SCHEMAS=MYLIB,PRODDATA,CUSTDATA
# Leave blank to restrict to system schemas only (QSYS2, SYSTOOLS, etc.)
ALLOWED_USER_SCHEMAS=

# User Schema Audit Logging (optional)
# Set to enable file-based audit log of all user schema queries
# USER_SCHEMA_AUDIT_LOG=user_schema_audit.log

# =============================================================================
# PARALLEL AGENT SETTINGS (ibmi_parallel_agent.py)
# =============================================================================

# Connection Pool Size (should match MAX_PARALLEL_AGENTS for optimal performance)
IBMI_POOL_SIZE=5

# Maximum parallel sub-agents to run concurrently
MAX_PARALLEL_AGENTS=4

# Timeout for individual agent execution (seconds)
PARALLEL_AGENT_TIMEOUT=120

# Result size limits
MAX_RESULT_ROWS=500
MAX_RESULT_BYTES=500000

# Enable audit logging of all SQL queries (for compliance)
ENABLE_AUDIT_LOG=1
